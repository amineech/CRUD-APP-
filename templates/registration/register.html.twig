{% extends 'base.html.twig' %}

{% block title %}Utilisateur - inscription{% endblock %}

{% block body %}
    
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger mt-4 text-center" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {% if app.session.has('info') %}
        <h6 class="alert alert-success my-4 text-center">{{ app.session.remove('info') }}</h6>
    {% endif %}
    
    <h1 class="text-center my-4 title-page-form">S'inscrire</h1>

    <div class="container">
        {{ form_start(registrationForm) }}
            <div class="form-group form-row">
                {{ form_label(registrationForm.email, null, { 'label_attr': {'class': 'form-label'} }) }}&nbsp;&nbsp;<span class="etoile">*</span>
                {{ form_widget(registrationForm.email, { 'attr': { 
                    'class': 'form-control mb-2',
                }}) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-group form-row">
                {{ form_label(registrationForm.username, null, { 'label_attr': {'class': 'form-label'} }) }}&nbsp;&nbsp;<span class="etoile">*</span>
                {{ form_widget(registrationForm.username, { 'attr': { 
                    'class': 'form-control mb-2',
                }}) }}
                {{ form_errors(registrationForm.username) }}
            </div>
            <div class="form-group form-row">
                {{ form_label(registrationForm.password.first, null, { 'label_attr': {'class': 'form-label'} }) }}&nbsp;&nbsp;<span class="etoile">*</span>
                {{ form_widget(registrationForm.password.first, { 'attr': { 
                    'class': 'form-control mb-2',
                }}) }}
                {{ form_errors(registrationForm.password.first) }}
            </div>
            <div class="form-group form-row">
                {{ form_label(registrationForm.password.second, null, { 'label_attr': {'class': 'form-label'} }) }}&nbsp;&nbsp;<span class="etoile">*</span>
                {{ form_widget(registrationForm.password.second, { 'attr': { 
                    'class': 'form-control mb-2',
                }}) }}
                {{ form_errors(registrationForm.password.second) }}
            </div>
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="form-group form-row-submit mt-4">
                {{ form_widget(registrationForm.send, { 'attr': { 'class': 'btn-submit mt-2' } }) }}
            </div>
            {# to deete after #}
            {# <button type="submit" class="btn-submit my-3">Register</button> #}
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
